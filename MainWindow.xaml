<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator" Height="500" Width="350">
    <Grid Background="FloralWhite" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="3" Content="Clear" Command="{Binding Clear}"
                Style="{StaticResource ButtonStyle}"/>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="4" Text="{Binding TextValue}" Margin="5" FontSize="60" Background="Aquamarine"
                Style="{StaticResource TextBlockStyle}"/>
        <Button Grid.Column="0" Grid.Row="2" Margin="5" Content="7" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="1" Grid.Row="2" Margin="5" Content="8" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="2" Grid.Row="2" Margin="5" Content="9" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="0" Grid.Row="3" Margin="5" Content="4" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="1" Grid.Row="3" Margin="5" Content="5" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="2" Grid.Row="3" Margin="5" Content="6" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="0" Grid.Row="4" Margin="5" Content="1" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="1" Grid.Row="4" Margin="5" Content="2" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="2" Grid.Row="4" Margin="5" Content="3" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="0" Grid.Row="5" Margin="5" Content="0" Command="{Binding AddDigit}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="1" Grid.Row="5" Margin="5" Content=","  Command="{Binding Comma}"
                Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Column="2" Grid.Row="5" Margin="5" Content="=" Command="{Binding RenderExpression}"
                Style="{StaticResource ButtonStyle}"/>
        <Grid Grid.Row="2" Grid.Column="3" Grid.RowSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Margin="5" Content="Back" Command="{Binding AddDigit}"
                    Style="{StaticResource ButtonStyle}"/>
            <Button Grid.Row="1" Margin="5" Content="/" Command="{Binding AddDigit}"
                    Style="{StaticResource ButtonStyle}"/>
            <Button Grid.Row="2" Margin="5" Content="*" Command="{Binding AddDigit}"
                    Style="{StaticResource ButtonStyle}"/>
            <Button Grid.Row="3" Margin="5" Content="-" Command="{Binding AddDigit}"
                    Style="{StaticResource ButtonStyle}"/>
            <Button Grid.Row="4" Margin="5" Content="+" Command="{Binding AddDigit}"
                    Style="{StaticResource ButtonStyle}"/>
        </Grid>
    </Grid>
    
</Window>
